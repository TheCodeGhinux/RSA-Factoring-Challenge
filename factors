#!/bin/bash

# Function to check if a number is prime
is_prime() {
  number=$1
  if ((number < 2)); then
    return 1
  fi
  for ((i = 2; i <= number / 2; i++)); do
    if ((number % i == 0)); then
      return 1
    fi
  done
  return 0
}

# Function to factorize RSA numbers into prime factors
factorize_rsa() {
  n=$1
  for ((i = 2; i <= n / 2; i++)); do
    if ((n % i == 0)); then
      p=$i
      q=$((n / i))
      if is_prime "$p" && is_prime "$q"; then
        echo "n = $p * $q"  # Print the factorization result
        return
      fi
    fi
  done
  echo "Unable to factorize the number."  # Print a message if factorization is not possible
}

# Main script logic
if [ $# -ne 1 ]; then
  echo "Usage: $0 <number>"  # Display usage message if the number of arguments is incorrect
else
  factorize_rsa "$1"  # Call the factorize_rsa function with the input number as an argument
fi
